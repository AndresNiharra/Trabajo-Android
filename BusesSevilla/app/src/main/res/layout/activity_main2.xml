<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alba.busessevilla.Main2Activity">

    <TextView
        android:id="@+id/consultaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Consulta relacionada con la parada situada en:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/puebloDatoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/consultaTextView"
        android:layout_alignLeft="@+id/consultaTextView"
        android:layout_alignRight="@+id/consultaTextView"
        android:layout_alignStart="@+id/consultaTextView"
        android:layout_below="@+id/consultaTextView"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/trayectoDatoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/puebloDatoTextView"
        android:layout_alignLeft="@+id/puebloDatoTextView"
        android:layout_alignRight="@+id/puebloDatoTextView"
        android:layout_alignStart="@+id/puebloDatoTextView"
        android:layout_below="@+id/puebloDatoTextView"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/paradaDatoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/trayectoDatoTextView"
        android:layout_alignLeft="@+id/trayectoDatoTextView"
        android:layout_alignRight="@+id/trayectoDatoTextView"
        android:layout_alignStart="@+id/trayectoDatoTextView"
        android:layout_below="@+id/trayectoDatoTextView"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lineasParadaListView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

</RelativeLayout>
