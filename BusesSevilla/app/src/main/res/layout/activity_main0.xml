<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alba.busessevilla.Main0Activity"
    android:background="#ffffff">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BusImage"
        android:layout_marginTop="34dp"
        android:text="Bienvenido/a a la aplicación Buses Sevilla. \n Aquí podrá consultar los horarios de cualquier línea de autobús de la provincia de Sevilla."
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/welcomeButton"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:onClick="btnWelcomeClicked"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/welcomeTextView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/BusImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:background="@color/colorIcons"
        android:src="@drawable/autobus"
        android:visibility="visible" />

</RelativeLayout>
